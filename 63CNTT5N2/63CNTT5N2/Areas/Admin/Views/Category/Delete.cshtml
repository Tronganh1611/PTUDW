@model MyClass.Model.Categories

@{
    ViewBag.Title = "Xac nhan xoa mau tin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    
<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text danger">BAN CO CHAC CHAN XOA MAU TIN NAY KHONG ?</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Trash","Category")" class="btn-sm btn-info"><i class="fa fa-long-arrow-alt-lefts"></i>Quay lại</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Partial("Message")
                    <table class="table table-bordered table-striped">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Id)</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Slug)</th>
                            <th>@Html.DisplayNameFor(model => model.ParentId)</th>
                            <th>@Html.DisplayNameFor(model => model.Order)</th>
                            <th>@Html.DisplayNameFor(model => model.MetaDesc)</th>
                            <th>@Html.DisplayNameFor(model => model.MetaKey)</th>
                            <th>Chức năng</th>
                        </tr>


                        <tr>
                            <td>@Html.DisplayFor(model => model.Id)</td>
                            <td>@Html.DisplayFor(model => model.Name)</td>
                            <td>@Html.DisplayFor(model => model.Slug)</td>
                            <td>@Html.DisplayFor(model => model.ParentId)</td>
                            <td>@Html.DisplayFor(model => model.Order)</td>
                            <th>@Html.DisplayNameFor(model => model.MetaDesc)</th>
                            <th>@Html.DisplayNameFor(model => model.MetaKey)</th>


                        </tr>


                    </table>
                    <div class="form-actions no-color">
                        <button class="but-sm btn-danger" type="submit" name="Delete">Xoa [Del] <i class="fa-fa-trash"></i></button>
                    </div>
                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
</div><!-- ./wrapper -->

}
